\mode<presentation>

% Define colors.
\definecolor{wwviolet}{RGB}{180,21,58}   
\definecolor{wwblue}{HTML}{00b2dd}  
\definecolor{mpiblue}{HTML}{5397CC}
\definecolor{wwsky}{HTML}{204f79}
\definecolor{wwgrey}{HTML}{3f4246}
\definecolor{wwaubergine}{HTML}{5b3069}
\definecolor{wwruby}{HTML}{89102c}
\definecolor{wwbrubyred}{HTML}{ef4050}
\definecolor{wworange}{HTML}{f47920}
\definecolor{wwborange}{HTML}{f26322}
\definecolor{wwgold}{HTML}{ffc233}
\definecolor{wwbgold}{HTML}{c8a019}

\definecolor{myBlue1}{RGB}{5, 38, 79}
\definecolor{myBlue2}{RGB}{21, 144, 255}

% Settings.
\colorlet{wwmaincolor}{wwaubergine}
\colorlet{wwsurroundcolor}{wwaubergine}
\colorlet{wwcontrastcolor}{white}

\setbeamercolor*{title page header}{fg=white}
\setbeamercolor*{date}{fg=myBlue2}
\setbeamercolor*{author}{fg=white}
\setbeamercolor*{institute}{fg=white}

\setbeamercolor*{frametitle}{fg=wwmaincolor}

\setbeamercolor{palette primary}{fg=wwgrey}
\setbeamercolor{palette secondary}{fg=wwgrey}
\setbeamercolor{palette tertiary}{fg=wwgrey}
\setbeamercolor{palette quaternary}{fg=wwgrey}
\setbeamercolor{normal text}{fg=wwgrey}

\setbeamercolor{block title example}{use=structure,fg=white,bg=wwmaincolor}
\setbeamercolor{block body example}{use=structure,bg=wwmaincolor!10,fg=wwgrey}

\setbeamercolor{block title definition}{use=structure,fg=white,bg=wwmaincolor}
\setbeamercolor{block body definition}{use=structure,bg=wwmaincolor!10,fg=wwgrey}

\setbeamercolor{block title}{use=structure,fg=white,bg=wwmaincolor}
\setbeamercolor{block body}{use=structure,bg=wwmaincolor!10,fg=wwgrey}

\setbeamercolor{section in head/foot}{bg=wwblue!80,fg=wwmaincolor}
\setbeamercolor{author in head/foot}{bg=wwsurroundcolor,fg=wwcontrastcolor}
\setbeamercolor{date in head/foot}{bg=wwsurroundcolor!70,fg=wwcontrastcolor}
\setbeamercolor{title in head/foot}{bg=wwsurroundcolor!90,fg=wwcontrastcolor}

\setbeamertemplate{itemize item}{\scriptsize\raise1.25pt\hbox{\color{wwviolet}{$\blacktriangleright$}}}
\setbeamertemplate{itemize subitem}{\scriptsize\raise1.25pt\hbox{\color{wwsky}{$\blacktriangleright$}}}
\setbeamertemplate{itemize subsubitem}{\tiny\raise1.5pt\hbox{\color{wwblue}{$\blacktriangleright$}}}
\setbeamerfont{itemize/enumerate subbody}{size=\normalsize} 
\mode<all>
